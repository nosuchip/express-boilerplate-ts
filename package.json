{
    "name": "express-boilerplate-ts",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "scripts": {
        "postbuild": "ef-tspm",
        "server:dev": "ts-node-dev -r tsconfig-paths/register --poll server/server.ts",
        "server:build": "tsc",
        "server:start": "node dist/server.js",
        "server:lint": "tsc --noEmit && eslint 'server/**/*.{js,ts,tsx}' --quiet --fix --ignore-pattern 'dist/'",
        "prettier": "prettier --write \"server/**/*.{ts,tsx}\"",
        "server:test": "ts-mocha --paths -p ./tsconfig.json server/**/*.spec.ts"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "import-sort-style-module"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix",
            "npm run prettier",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@sendgrid/mail": "^6.5.5",
        "handlebars": "^4.7.3",
        "handlebars-layouts": "^3.1.4",
        "mocha": "^7.1.1",
        "mocha-typescript": "^1.1.17"
    },
    "devDependencies": {
        "@ef-carbon/tspm": "^2.2.5",
        "@types/compression": "^1.7.0",
        "@types/connect-history-api-fallback": "^1.3.3",
        "@types/cors": "^2.8.6",
        "@types/expect": "^24.3.0",
        "@types/express": "^4.17.3",
        "@types/express-rate-limit": "^5.0.0",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.7",
        "@types/node": "^12.12.31",
        "@types/socket.io": "^2.1.4",
        "@types/uuid": "^7.0.2",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "axios": "^0.19.2",
        "compression": "^1.7.4",
        "connect-history-api-fallback": "^1.6.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-bearer-token": "^2.4.0",
        "express-rate-limit": "^5.1.1",
        "express-validator": "^6.4.0",
        "husky": "^4.2.3",
        "import-sort-style-module": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "lint-staged": "^10.0.9",
        "mongoose": "^5.9.6",
        "prettier": "^2.0.2",
        "prettier-plugin-import-sort": "0.0.4",
        "socket.io": "^2.3.0",
        "ts-mocha": "^7.0.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3",
        "uuid": "^7.0.2",
        "winston": "^3.2.1",
        "winston-mongodb": "^5.0.1"
    }
}
