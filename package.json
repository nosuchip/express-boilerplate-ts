{
    "name": "express-boilerplate-ts",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "scripts": {
        "postbuild": "ef-tspm",
        "server:dev": "ts-node-dev -r tsconfig-paths/register --poll server/index.ts",
        "server:build": "tsc",
        "server:start": "node dist/index.js",
        "server:lint": "tsc --noEmit && eslint 'server/**/*.{js,ts,tsx}' --quiet --fix --ignore-pattern 'dist/'",
        "prettier": "prettier --write \"server/**/*.{ts,tsx}\"",
        "server:test": "TS_NODE_FILES=true ./node_modules/.bin/mocha --exit -r ts-node/register -r tsconfig-paths/register ./**/*.spec.ts",
        "test": "npm run server:test"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "import-sort-style-module"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix",
            "npm run prettier",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@sendgrid/mail": "^6.5.5",
        "handlebars": "^4.7.6",
        "handlebars-layouts": "^3.1.4",
        "mocha": "^7.2.0",
        "mocha-typescript": "^1.1.17"
    },
    "devDependencies": {
        "@ef-carbon/tspm": "^2.2.5",
        "@types/chai": "^4.2.12",
        "@types/compression": "^1.7.0",
        "@types/connect-history-api-fallback": "^1.3.3",
        "@types/cors": "^2.8.7",
        "@types/expect": "^24.3.0",
        "@types/express": "^4.17.6",
        "@types/express-rate-limit": "^5.1.0",
        "@types/express-serve-static-core": "~4.17.7",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^12.12.54",
        "@types/socket.io": "^2.1.11",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^7.0.4",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "axios": "^0.19.2",
        "chai": "^4.2.0",
        "compression": "^1.7.4",
        "connect-history-api-fallback": "^1.6.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-bearer-token": "^2.4.0",
        "express-rate-limit": "^5.1.3",
        "express-validator": "^6.6.1",
        "husky": "^4.2.5",
        "import-sort-style-module": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "lint-staged": "^10.2.13",
        "mongoose": "^5.10.1",
        "prettier": "^2.1.1",
        "prettier-plugin-import-sort": "0.0.4",
        "socket.io": "^2.3.0",
        "supertest": "^4.0.2",
        "ts-node-dev": "^1.0.0-pre.61",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7",
        "uuid": "^7.0.3",
        "winston": "^3.3.3",
        "winston-mongodb": "^5.0.3"
    }
}
